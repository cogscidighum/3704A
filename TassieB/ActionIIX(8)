<body> 
  <h2>CogSciDigHumJS</h2>
  <iframe
    src="https://cogsphere-acogsphere.hf.space"
    frameborder="0"
    width="350"
    height="150"
  ></iframe>
  <br>  
  <label for="nameinput">Name:</label>
  <input type="text" id="nameinput" placeholder="Enter Your Name Here">
  <br>
  <div id="output">Waiting!</div>
  <label for="celsciSelect">Pick a Celsci and Rate then Vote!</label>
  <select id="celsciSelect"></select>
  <select id="rateSelect"></select>
  <button type="button" id="button1">Vote!</button>

  <script>       
    var celscilist = [ /* ...Your Celsci list... */ ]

    var celsciSelect = document.getElementById("celsciSelect");
    var rateSelect = document.getElementById("rateSelect");

    function addOption(select, value, text) {
      var option = document.createElement("option");
      option.value = value;
      option.text = text;
      select.appendChild(option);
    }

    for (var i = 0; i < celscilist.length; i++) {
      addOption(celsciSelect, i, celscilist[i]);
    }

    addOption(rateSelect, 0, "Rate");
    for (var i = 1; i <= 5; i++) {
      addOption(rateSelect, i, i);
    }
  </script>
  <script type="module"> 
    import { client } from "https://cdn.jsdelivr.net/npm/@gradio/client@0.1.4/dist/index.min.js";

    const generate = document.getElementById("button1");   
    generate.addEventListener("click", async () =>{
      try {
        const app = await client("https://cogsphere-acogsphere.hf.space");
        const result = await app.predict(0, [
          nameinput.value,
          rateSelect.value.toString(),
          celscilist[celsciSelect.value],
        ]);
        document.getElementById("output").innerHTML = "Sent!";
      } catch (error){
        console.log("Error:",error.message); 
      }       
    });
  </script>
